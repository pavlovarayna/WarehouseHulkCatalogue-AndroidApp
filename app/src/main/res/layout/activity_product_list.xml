<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.products.ProductListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/tw_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="@string/productlist_title"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_drinks"
            android:layout_width="116dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/drinks_description"
            android:src="@drawable/softdrinks" />

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="116dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="80dp"
            android:contentDescription="@string/drinks_description"
            android:src="@drawable/food" />

        <ImageView
            android:id="@+id/img_domestics"
            android:layout_width="116dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/img_food"
            android:layout_marginEnd="42dp"
            android:contentDescription="@string/drinks_description"
            android:src="@drawable/domestics" />

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="408dp"
            android:layout_below="@+id/tw_titleText"
            android:layout_marginTop="117dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>